{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "bun"
  },
  "newProjectRoot": "projects",
  "projects": {
    "ngx-translate-toolkit": {
      "projectType": "library",
      "root": "projects/ngx-translate-toolkit",
      "sourceRoot": "projects/ngx-translate-toolkit/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "configurations": {
            "production": {
              "tsConfig": "projects/ngx-translate-toolkit/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/ngx-translate-toolkit/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular/build:unit-test",
          "options": {
            "tsConfig": "projects/ngx-translate-toolkit/tsconfig.spec.json",
            "runner": "vitest",
            "buildTarget": "::development",
            "codeCoverage": true
          }
        }
      }
    }
  }
}
